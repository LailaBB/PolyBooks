{%  extends "admin/layout.html.twig" %}

{% block content %}
    <section class="content-header">
        <h1>
            document
            <small>Modifier</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('index_admin_page') }}"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-success">
                    <div class="box-header with-border">

                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form action="{{ path('admin_document_edit', { 'id': document.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                        <input type="hidden" name="_method" value="POST" />
                        {{ form_widget(edit_form._token) }}
                        <div class="box-body">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Titre</label>

                                <div class="col-sm-10">
                                    {{ form_widget(edit_form.title,{'attr': {'class': 'form-control' }} )}}<br>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Description</label>

                                <div class="col-sm-10">
                                    {{ form_widget(edit_form.description,{'attr': {'class': 'form-control' }} )}}<br>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Module</label>

                                <div class="col-sm-10">
                                    {{ form_widget(edit_form.module,{'attr': {'class': 'form-control' }} )}}<br>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Image</label>

                                <div class="col-sm-10">
                                    {{ form_widget(edit_form.image,{'attr': {'class': 'form-control' }} )}}<br>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Document</label>

                                <div class="col-sm-10">
                                    {{ form_widget(edit_form.document,{'attr': {'class': 'form-control' }} )}}<br>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Publique</label>

                                <div class="col-sm-10" id="divpub">
                                    {{ form_widget(edit_form.isPublic )}}<br>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <a href="{{ path('admin_document_index') }}"> <button type="button" class="btn btn-default">Annuler</button></a>
                            <button type="submit" class="btn btn-info pull-right">Ajouter</button>
                        </div>
                        <!-- /.box-footer -->
                    </form>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->

{% endblock %}
{% block JS %}
    <script>
        var str =  $('#divpub').html();
        $('#divpub').html(str.replace('required="false"', ''));

    </script>
{% endblock %}

